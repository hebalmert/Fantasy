@page "/countries"

<h3>@Localizer["Countries"]</h3>

<div class="mb-3">
    <a class="btn btn-primary" href="/countries/create">@Localizer["New"] @Localizer["Country"]</a>
</div>

<GenericList MyList="Countries">
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>@Localizer["Country"]</td>
                    <td># @Localizer["Teams"]</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Countries!)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.TeamsCount</td>
                        <td>
                            <a class="btn btn-warning" href="/countries/edit/@item.CountryId">@Localizer["Edit"]</a>
                            <button class="btn btn-danger" @onclick=@(()=> DeleteAsync(item))>@Localizer["Delete"]</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>



