@page "/teams"

<h3>@Localizer["Teams"]</h3>

<div class="mb-3">
    <a class="btn btn-primary" href="/teams/create">@Localizer["New"] @Localizer["Team"]</a>
</div>

<GenericList MyList="Teams">
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>@Localizer["Team"]</td>
                    <td>@Localizer["Image"]</td>
                    <td>@Localizer["Country"]</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Teams!)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td><img src="@item.ImageFull" style="width:90px;height:60px;"/></td>
                        <td>@item.Country!.Name</td>
                        <td>
                            <a class="btn btn-warning" href="/teams/edit/@item.TeamId">@Localizer["Edit"]</a>
                            <button class="btn btn-danger" @onclick=@(()=> DeleteAsync(item))>@Localizer["Delete"]</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>